<!DOCTYPE html>
<html>

<head>
  <title>OOZ - B_Test</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=800">

    <link href="/css/bootstrap.css" rel="stylesheet">
    <link href="/css/bootstrap-theme.css" rel="stylesheet">
    <link href="/css/oozPage_BStyling.css" rel="stylesheet">

    <link href="/css/nowPlayingBarStyle.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>

<!--bottom navigation bar-->
<body>
  <div class="navbar">
      <a class="active" href="/index"><i class="fa fa-home"></i></a> 
      <a href="search"><i class="fa fa-search"></i></a>
      <a href="partyMode"><i class="fa fa-users"></i></a>
      <a href="profile"><i class="fa fa-user"></i></a>
  </div>

  <!--playlists-->
  <div class="container">

    <div class="child" id="playlist">

              <!--The OOZ-->
        <div class="album" id="ooz">
          <a href="ooz">
            <img src="https://is2-ssl.mzstatic.com/image/thumb/Music128/v4/f7/e0/24/f7e024fd-25df-eb5d-2308-3be91aaab3c3/cover.jpg/600x600bf.jpg"
              width=250px height=250px a href="ooz">
            <p id="title">The OOZ</p>
            <p id="artist">King Krule</p>
          </a>
        </div>

    </div>
  </div>

  <!-- NowPlayingBar -->
  <div id="nowPlayingBarContainer">

    <div id="nowPlayingBar">

      <div id="nowPlayingLeft">
        <div class="content">
          <span class="albumLink">
            <img class="albumArtwork" src="https://is2-ssl.mzstatic.com/image/thumb/Music128/v4/f7/e0/24/f7e024fd-25df-eb5d-2308-3be91aaab3c3/cover.jpg/600x600bf.jpg">
          </span>

          <div class="trackInfo">
            
            <span class="trackName">
              <p id="trackName">Czech One<p>
            </span>

            <span class="artistName">
              <span>King Krule</span>
            </span>

          </div>
        </div>
      </div>


      <audio id="myAudio"> 
        <source src="/songs/CzechOne.mp3" type="audio/mpeg">
      </audio>

      <div id="nowPlayingCenter">
        <div class="content playerControls">
          <div class="buttons">

            <button onclick="playAudio();moveBar();" class="controlButton play" title="Play button">
              <img src="/icons/play.png">
            </button>

            <button onclick="pauseAudio()" class="controlButton pause" title="Pause button">
              <img src="/icons/pause.png">
            </button>

            <button onclick="goNext();dumSurf();" class="controlButton forward" title="Forward button" alt="Forward Button">
              <img src="/icons/next.png">
            </button>

          </div>

          <div class="playbackBar">
            <span class="progressTime current">0.00</span>
            <div class="progressBar">
                <div class="progressBarBg">
                  <div id="myBar"></div>
                </div>
            </div>
            <span class="progressTime remaining">4.02</span>
          </div> 
        </div>
      </div>

    </div>
  </div>

  <script>
    var playlist = ['/songs/CzechOne.mp3', '/songs/DumSurfer.mp3', '/songs/HalfManHalfShark.mp3'];

    var x = document.getElementById("myAudio");
    var n;
    var i = 0;

    function playAudio() {
      x.play();
      n = 1;
    }
    function pauseAudio() {
      x.pause();
      n = 2;
    }

   function goNext() {
      i++;
      if(i < playlist.length){
        console.log(playlist[i]);
        x.src = playlist[i];
        x.play();
      }
      else {
        i = 0;
        ++i;
        x.src = playlist[i];
        x.play();
      }
    }

    function dumSurf(){
      var spanText = document.getElementById("trackName");
      spanText.innerHTML = "Dum Surfer";
    }



    function moveBar(){
      var elem = document.getElementById("myBar");
      var width = 0.01;
      var id = setInterval(frame, 500);
      function frame() {
        if(n==2) {
          clearInterval(id);
        }
        else {
          width++;
          elem.style.width = width + 'px';
        }
      }
    }
  </script>

  <script src="/js/jquery-1.11.0.js"></script>
  <script src="/js/bootstrap.js"></script>

</body>
</html>
